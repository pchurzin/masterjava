<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="http://javaops.ru" xmlns:j="http://javaops.ru" xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://javaops.ru" elementFormDefault="qualified" attributeFormDefault="unqualified">

    <xs:element name="Payload">
        <xs:complexType>
            <xs:all>
                <xs:element name="Cities" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="City" type="cityType" />
                        </xs:sequence>
                    </xs:complexType>
                    <xs:key name="cityId">
                        <xs:selector xpath="j:City" />
                        <xs:field xpath="@id" />
                    </xs:key>
                </xs:element>
                <xs:element name="Users" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="User" type="userType" />
                        </xs:sequence>
                    </xs:complexType>
                    <xs:keyref name="city" refer="j:cityId">
                        <xs:selector xpath="User" />
                        <xs:field xpath="@city" />
                    </xs:keyref>
                </xs:element>
                <xs:element name="Projects" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="Project" type="projectType" />
                        </xs:sequence>
                    </xs:complexType>
                    <xs:key name="projectId">
                        <xs:selector xpath="j:Project" />
                        <xs:field xpath="@id" />
                    </xs:key>
                </xs:element>
                <xs:element name="Groups" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence maxOccurs="unbounded">
                            <xs:element name="Group" type="groupType" />
                        </xs:sequence>
                    </xs:complexType>
                    <xs:key name="groupId">
                        <xs:selector xpath="j:Group" />
                        <xs:field xpath="@id" />
                    </xs:key>
                </xs:element>
            </xs:all>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="userType">
        <xs:sequence>
            <xs:element type="xs:string" name="fullName" />
        </xs:sequence>
        <xs:attribute type="flagType" name="flag" use="required" />
        <xs:attribute type="xs:string" name="city" use="required" />
        <xs:attribute type="xs:string" name="email" use="required" />
    </xs:complexType>

    <xs:simpleType name="flagType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="active" />
            <xs:enumeration value="deleted" />
            <xs:enumeration value="superuser" />
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="cityType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="id" use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="projectType">
        <xs:all>
            <xs:element type="xs:string" name="Name" />
            <xs:element type="xs:string" name="Description" />
            <xs:element name="Groups">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="Group" maxOccurs="unbounded">
                            <xs:simpleType>
                                <xs:restriction base="xs:string" />
                            </xs:simpleType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:all>
        <xs:attribute type="xs:string" name="id" use="required" />
    </xs:complexType>

    <xs:complexType name="groupType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="type" type="groupTypeType" use="required" />
                <xs:attribute type="xs:string" name="id" use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:simpleType name="groupTypeType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="registering" />
            <xs:enumeration value="current" />
            <xs:enumeration value="finished" />
        </xs:restriction>
    </xs:simpleType>
</xs:schema>